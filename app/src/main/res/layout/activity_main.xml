<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:padding="25dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="24dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@id/tvStudentName"
        app:layout_constraintTop_toTopOf="@id/tvStudentName"
        app:layout_constraintBottom_toBottomOf="@id/tvStudentName"/>

    <TextView
        android:id="@+id/tvStudentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Class"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStudentName" />
    <EditText
        android:id="@+id/etStudentClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Student class"
        android:textSize="24dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tvStudentClass"
        app:layout_constraintTop_toTopOf="@id/tvStudentClass"
        app:layout_constraintBottom_toBottomOf="@id/tvStudentClass"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/etStudentClass"
        />

</androidx.constraintlayout.widget.ConstraintLayout>